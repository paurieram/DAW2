		link(rel="icon", type="image/png", href="/images/favicon.png")
		link(rel="stylesheet", href="/css/bootstrap.min.css")
		script(src="/js/jquery.min.js")
		script(src="/js/popper.min.js")
		script(src="/js/bootstrap.min.js")
